<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.RHCPFanArt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_300</item>
        <item name="colorPrimarySurface">@color/red_100</item>
        <item name="colorPrimaryVariant">@color/pink_300</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_900</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="tabStyle">@style/Widget.Rfa.TabLayout</item>

        <item name="sliderStyle">@style/Widget.Rfa.Slider</item>

        <item name="searchViewStyle">@style/Widget.Rfa.SearchViewStyle</item>

        <item name="materialButtonStyle">@style/Widget.Rfa.Button</item>

        <!--Typography-->
        <item name="textAppearanceButton">@style/TextAppearance.Rfa.Button</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Rfa.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Rfa.Subtitle2</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Rfa.Headline6</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Rfa.Headline5</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Rfa.Body2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Rfa.Body1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Rfa.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Rfa.Overline</item>

    </style>

    <style name="ThemeOverlay.Rfa.TabLayout" parent="">
        <item name="colorPrimary">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.Rfa.SeekBar" parent="">
        <item name="colorPrimary">@color/red_300</item>
        <item name="colorOnPrimary">@color/red_300</item>
        <item name="colorOnSurface">@color/red_300</item>
    </style>

    <style name="ThemeOverlay.Rfa.CircularProgressIndicator" parent="">
        <item name="colorPrimary">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ThemeOverlay.Rfa.TextInputLayout" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorError">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
    </style>

    <style name="ThemeOverlay.Rfa.TextInputLayout.Large" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorError">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="textAppearanceSubtitle1">?attr/textAppearanceHeadline5</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
    </style>

</resources>